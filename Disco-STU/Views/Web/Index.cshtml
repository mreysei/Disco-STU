@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Disco STU</title>
    <link href="@Url.Content("~/Content/Styles/materialize.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/editMaterialize.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/nouislider.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/animations.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/chartist.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/style.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header">
        <h1>
            <object type="image/svg+xml" data="@Url.Content("~/Content/Images Vectorized/discostu.svg")"></object>
            <small>Disco</small>Stu
        </h1>
        <div class="menu">
            <a role="types" href="">Inicio</a>
            <a role="ranking" href="">Ranking</a>
            <a role="contact" href="">Contacto</a>
        </div>
        <div class="rainbow"></div>
    </div>
    <div class="section">
        <div id="container"class="column left">
            <div id="types"></div>
            <div id="results"></div>
            <div id="ranking"></div>
            <div id="contact">
                <div>
                    <h1>Descripción</h1>
                    <p>Proyecto desarrollado por alumnos del curso 2016-17, del Ciclo Superior de Formación
                    Profesional Desarrollo de Aplicaciones Web.</p>

                    <h1>Enlaces</h1>
                    <p>Enlace al proyecto desde <a href="https://github.com/mreysei/Disco-STU" target="_blank">Github</a>
                    o desde <a href="https://trello.com/dstu" target="_blank">Trello</a> ;) </p>

                    <h1>Contacto</h1>
                    <table>
                        <tr>
                            <th>Miembro</th>
                            <th>Twitter</th>
                            <th>Github</th>
                        </tr>
                        <tr>
                            <td>Omar</td>
                            <td><a href="http://twitter.com/omarlm17" target="_blank">@@omarlm17</a></td>
                            <td><a href="https://github.com/omarlm" target="_blank">@@omarlm</a></td>
                        </tr>
                        <tr>
                            <td>Michael</td>
                            <td><a href="http://twitter.com/mreysei" target="_blank">@@mreysei</a></td>
                            <td><a href="https://github.com/mreysei" target="_blank">@@mreysei</a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="column right">
            <div id="menuRight">
                @if (Session["USUARIO"] != null)
                {
                    Disco_STU.Models.Cliente c = (Disco_STU.Models.Cliente)Session["USUARIO"];
                    <div class="card" id="usuario" data-usuario="@c.id">
                        <div class="card-content white-text">
                            <h4>Bienvenido @c.Nombre</h4>
                            <b>Fecha de registro:</b> @c.FechaRegistro<br />
                            <b>Email:</b> @c.Email<br />
                            <hr />
                            <button class="btn waves-effect red darken-3" type="submit" id="btnLogout">Cerrar Session</button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card">
                        <ul class="tabs">
                            <li class="tab col s3"><a class="active" href="#log">Iniciar sesión</a></li>
                            <li class="tab col s3"><a href="#reg">Registrarse</a></li>
                        </ul>
                        <form id="log">
                            <div class="card-content white-text">
                                <div class="input-field">
                                    <input id="email" type="text">
                                    <label for="email">Correo</label>
                                </div>
                                <div class="input-field">
                                    <input id="password" type="password" readonly="true">
                                    <label for="password">Contraseña</label>
                                </div>
                            </div>
                            <div class="card-action col s12">
                                <button class="btn waves-effect" type="submit" id="btnLogin">Iniciar sesión</button>
                            </div>
                        </form>
                        <form id="reg">
                            <div class="card-content white-text">
                                <div class="input-field">
                                    <input id="name" type="text">
                                    <label for="name">Nombre</label>
                                </div>
                                <div class="input-field">
                                    <input id="email1" type="text">
                                    <label for="email1">Correo</label>
                                </div>
                                <div class="input-field">
                                    <input id="repeatEmail" type="text">
                                    <label for="repeatEmail">Repetir correo</label>
                                </div>
                                <div class="input-field">
                                    <input id="password1" type="password" readonly="true">
                                    <label for="password1">Contraseña</label>
                                </div>
                            </div>
                            <div class="card-action col s12">
                                <button class="btn waves-effect" type="submit" id="btnRegister">Registrarse</button>
                            </div>
                        </form>
                    </div>
                }
                <form class="find">
                    <span class="title">Búsqueda</span>
                    <div class="input-field">
                        <input id="search" name="search" type="text">
                        <label for="search">Disco o intérprete</label>
                    </div>
                    <label for="sliderAgno">Rango de años</label>
                    <div id="sliderAgno"></div>
                    <input type="hidden" name="firstYear" readonly="readonly" id="firstYear" />
                    <input type="hidden" name="lastYear" readonly="readonly" id="lastYear" />
                    <button class="btn waves-effect" type="submit">¡Buscar!</button>
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <span>2ºDaw A / CIFP Cesar Manrique</span>
        <span>Entrega 6 de Marzo 2017</span>
        <span>
            <a href="http://twitter.com/omarlm17" target="_blank">Omar</a> &
            <a href="http://twitter.com/mreysei" target="_blank">Michael</a>
        </span>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.arctext.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/materialize.js")"></script>
    <script src="@Url.Content("~/Scripts/nouislider.js")"></script>
    <script src="@Url.Content("~/Scripts/chartist.js")"></script>
    <script src="@Url.Content("~/Scripts/React/react.js")"></script>
    <script src="@Url.Content("~/Scripts/React/react-dom.js")"></script>
    <script src="@Url.Content("~/Scripts/React/remarkable.min.js")"></script>
    <script src="@Url.Content("~/Scripts/filter.js")"></script>
    <script src="@Url.Content("~/Scripts/React/Generos.jsx")"></script>
    <script src="@Url.Content("~/Scripts/React/Ranking.jsx")"></script>
    <script src="@Url.Content("~/Scripts/React/Results.jsx")"></script>
    <script src="@Url.Content("~/Scripts/validate.js")"></script>
    <script src="@Url.Content("~/Scripts/script.js")"></script>
</body>
</html>
